<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapping.userMapper">

	<select id="getUser" parameterType="map" resultType="com.tap.entity.Users">
		select * from Users where 1=1
		<if test="userName!=''"> and User_name =#{userName}</if>
		<if test="password!=''"> and user_password=#{password}</if>
		<if test="mobile=!''"> and user_mobile=#{mobile}</if>
		<if test="mail=!''"> and user_mail=#{mail}</if>
	
	</select>
	
	<insert id="insertUser" parameterType="map">
		insert into users(user_name,user_password,user_mobile,user_mail) 
		values (#{userName},#{password},#{mobile},#{mail})
	</insert>
</mapper>